<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_enabled="false">
    <shape>
        <solid android:color="@color/gray_hint"/>
        <corners
            android:radius="@dimen/spacing_small" />
        <padding
            android:left="@dimen/spacing_small"
            android:top="@dimen/spacing_small"
            android:right="@dimen/spacing_small"
            android:bottom="@dimen/spacing_small" />
    </shape>
</item>

<item android:state_pressed="true" >
    <shape>
        <solid android:color="@color/gray_hint"/>
        <corners
            android:radius="@dimen/spacing_small" />
        <padding
            android:left="@dimen/spacing_small"
            android:top="@dimen/spacing_small"
            android:right="@dimen/spacing_small"
            android:bottom="@dimen/spacing_small" />
    </shape>
</item>

<item android:state_focused="true" >
    <shape>
        <solid android:color="@color/white"/>
        <corners
            android:radius="@dimen/spacing_small" />
        <padding
            android:left="@dimen/spacing_small"
            android:top="@dimen/spacing_small"
            android:right="@dimen/spacing_small"
            android:bottom="@dimen/spacing_small" />
    </shape>
</item>

<item>
    <shape>
        <solid android:color="@color/white"/>
        <corners
            android:radius="@dimen/spacing_small" />
        <padding
            android:left="@dimen/spacing_small"
            android:top="@dimen/spacing_small"
            android:right="@dimen/spacing_small"
            android:bottom="@dimen/spacing_small" />
    </shape>
</item>
</selector>