<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/geocacheBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/_110sdp"
    android:background="@color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/geocacheInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small">

        <TextView
            android:id="@+id/geocacheName"
            style="@style/Text.Primary.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Krosno Airporta sda sdas das dasda sdas das a sda sd" />

        <TextView
            android:id="@+id/code"
            style="@style/Text.Primary.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_toRightOf="@id/geocacheName"
            android:text="OP7243"

            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/linearLayout" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_very_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/geocacheSize"
                    style="@style/Text.Primary.VerySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wielkość: Normalna" />

                <TextView
                    android:id="@+id/geocacheRate"
                    style="@style/Text.Primary.VerySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_very_small"
                    android:text="Ocena: Znakomita" />

                <TextView
                    android:id="@+id/geocacheOwner"
                    style="@style/Text.Primary.VerySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_very_small"
                    android:maxWidth="@dimen/_130sdp"
                    android:text="Właściciel: Volfram" />

            </LinearLayout>


            <LinearLayout

                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_very_small"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_found"
                        android:tint="@color/green"/>

                    <TextView
                        android:id="@+id/geocacheFound"
                        style="@style/Text.Primary.VerySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_very_small"
                        android:text="@string/info_found" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_very_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_not_found"
                        android:tint="@color/red"/>

                    <TextView
                        android:id="@+id/geocacheNotFound"
                        style="@style/Text.Primary.VerySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_very_small"
                        android:text="@string/info_not_found" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_very_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/recommendationImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"
                        android:tint="@color/darkGreen"/>

                    <TextView
                        android:id="@+id/geocacheRecommendation"
                        style="@style/Text.Primary.VerySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_very_small"
                        android:text="@string/info_recommended" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>