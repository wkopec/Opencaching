<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/marker_window_background"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small">

        <TextView
            android:id="@+id/geocacheName"
            style="@style/Text.Primary.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_250sdp"
            android:text="Krosno Airporta sda sdas das dasda sdas das a sda sd" />

        <TextView
            android:id="@+id/code"
            style="@style/Text.Primary.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_toRightOf="@id/geocacheName"
            android:text="OP7243"

            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/linearLayout" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_very_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/geocacheSize"
                    style="@style/Text.Primary.VerySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wielkość: Normalna" />

                <TextView
                    android:id="@+id/geocacheRate"
                    style="@style/Text.Primary.VerySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_very_small"
                    android:text="Ocena: Znakomita" />

                <TextView
                    android:id="@+id/geocacheOwner"
                    style="@style/Text.Primary.VerySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_very_small"
                    android:maxWidth="@dimen/_130sdp"
                    android:text="Właściciel: Volfram" />

            </LinearLayout>


            <LinearLayout

                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_very_small"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_found"
                        android:tint="@color/green"/>

                    <TextView
                        android:id="@+id/geocacheFound"
                        style="@style/Text.Primary.VerySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_very_small"
                        android:text="29 x znaleziona" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_very_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_not_found"
                        android:tint="@color/red"/>

                    <TextView
                        android:id="@+id/geocacheNotFound"
                        style="@style/Text.Primary.VerySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_very_small"
                        android:text="0 x nieznaleziona" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_very_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/recommendationImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"
                        android:tint="@color/darkGreen"/>

                    <TextView
                        android:id="@+id/geocacheRecommendation"
                        style="@style/Text.Primary.VerySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_very_small"
                        android:text="9 x rekomendowana" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/spacing_normal_x1_5"
        android:layout_height="@dimen/spacing_small"
        android:layout_gravity="center"
        android:background="@drawable/marker_window_rectangle" />

</LinearLayout>