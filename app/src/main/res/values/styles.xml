<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:background">@drawable/image_splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Text-->

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Primary">
        <item name="android:alpha">0.87</item>
    </style>
    <style name="Text.Secondary">
        <item name="android:alpha">0.54</item>
    </style>
    <style name="Text.Hint">
        <item name="android:alpha">0.38</item>
    </style>

    <style name="Text.Primary.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Primary.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Primary.VerySmall">
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="Text.Primary.Tiny">
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="Text.Secondary.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Secondary.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Secondary.VerySmall">
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="Text.Secondary.Tiny">
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <!--Other-->

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray_hint</item>
    </style>

    <style name="GNowProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">@dimen/_4sdp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">2</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/progressbar_colors</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@color/white</item>
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>
        <item name="searchSuggestionBackground">@android:color/white</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:hint">@string/map_search_hint</item>
    </style>

</resources>

