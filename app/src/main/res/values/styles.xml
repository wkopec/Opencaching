<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:background">@drawable/image_splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TranslucentStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--Text-->

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Primary">
        <item name="android:alpha">0.87</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:alpha">0.54</item>
    </style>
    <style name="Text.Hint">
        <item name="android:alpha">0.38</item>
    </style>

    <style name="Text.Primary.Big">
        <item name="android:textSize">@dimen/text_size_very_big</item>
    </style>

    <style name="Text.Primary.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Primary.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Primary.VerySmall">
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="Text.Primary.Tiny">
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="Text.Secondary.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Secondary.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Secondary.VerySmall">
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="Text.Secondary.Tiny">
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="TextButton" parent="Text.Primary">
        <item name="android:textColor">@color/text_button_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextButton.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextButton.VerySmall">
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <!--Buttons-->

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/button_white_rounded</item>
    </style>

    <style name="Button.PrimaryDark">
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Accent">
        <item name="android:background">@drawable/button_accent_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CircleButton">
        <item name="android:background">@drawable/button_circle_white_selector</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <!--Edit texts-->

    <style name="EditText">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

